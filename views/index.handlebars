{{#if user}}
<div>
    <div class="event">
        <div class="event-content">
            <h3>Lisa sündmus</h3>
            <form method="post" action="/addevent">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="title" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Sündmuse kirjeldus</label>
                    <textarea class="form-control" name="eventDescription" required></textarea>
                </div>
                <button type="submit">Lisa</button>
            </form>
        </div>
    </div>
</div>

<!-- Sündmused, kuhu kasutaja on kaasatud ja on unconfirmed -->
<h2>Kinnitamata sündmused:</h2>
{{#each otherEventsUnconfirmed}}
<div class="event">
    <div class="event-header">
        <div class="event-content">
            <h3>{{this.[0].title}}</h3>
        </div>
    </div>
    <div class="event-body">
        <div class="event-content">
            <h4>Looja: {{this.[0].receiverFName}} {{this.[0].receiverLName}}</h4>
            <p>{{this.[0].description}}</p>
            <h4>Olen võlgu: {{this.[0].amount}} </h4>
            <form method="post" action="/confirm">
                <button type="submit" name="confirmPayment" value="{{this.[0].paymentId}}">Kinnita nõue!</button>
            </form>
            <form method="post" action="/decline">
                <button type="submit" name="declinePayment" value="{{this.[0].paymentId}}">Tühista nõue!</button>
            </form>
        </div>
    </div>
    {{/each}}

    <!-- Sündmused, mille omanik kasutaja on -->
    <h2>Minu sündmused:</h2>

    {{#each myEvents}}
    <div class="event">
        <div class="event-header">
            <div class="event-content">
                <h3>{{this.[0].title}}</h3>
            </div>
        </div>
        <div class="event-body">
            <div class="event-content">
                <h4>Looja: {{this.[0].receiverFName}} {{this.[0].receiverLName}}</h4>
                <p>{{this.[0].description}}</p>
                <h4>Võlgnikud: </h4>
                {{#each this}}
                <div>
                    <p>{{payerFName}} {{payerLName}} {{amount}}</p>
                </div>
                {{/each}}
                <form method="post" action="/addpayer">
                    <div class="form-group">
                        <label>Võlgniku kasutajanimi</label>
                        <input type="text" name="friendName" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Summa</label>
                        <input type="text" name="friendPayAmount" class="form-control" required>
                    </div>
                    <input type="hidden" name="eventIdAddPayer" value={{this.[0].eventId}} class="form-control" required>
                    <button type="submit">Lisa</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}

    <!-- Sündmused, kuhu kasutaja on kaasatud ja on confirmed -->
    <h2>Kinnitatud sündmused:</h2>
    {{#each otherEventsConfirmed}}
    <div class="event">
        <div class="event-header">
            <div class="event-content">
                <h2>{{this.[0].title}}</h2>
            </div>
        </div>
        <div class="event-body">
            <h4>Looja: {{this.[0].receiverFName}} {{this.[0].receiverLName}}</h4>
            <p>{{this.[0].description}}</p>
            <h4>Olen võlgu: {{this.[0].amount}} </h4>
        </div>
    </div>
    {{/each}}

    {{else}}
    <h1>Welcome</h1>
    {{/if}}
</div>