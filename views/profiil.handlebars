<h1>Profiil</h1>

<hr>

<h2>Sõbrakutsed</h2>
<div class="bilansid">
    {{#each friendRequests}}
        <div class="card">
            <div class="card-header">
                <div class="card-content">
                    <h3>{{firstName}} {{lastName}} ({{username}})</h3>
                </div>
            </div>
            <div class="card-content">
                <form method="post" action="/profiil/accept">
                    <button class="accept" type="submit" name="acceptRequest" value="{{id}}">Nõustu</button>
                </form>
                <form method="post" action="/profiil/decline">
                    <button class="decline" type="submit" name="declineRequest" value="{{id}}">Keeldu</button>
                </form>
            </div>
        </div>
    {{else}}
        <h3>Sõbrakutsed puuduvad</h3>
    {{/each}}
</div>

<hr>

<h2>Sõprade arv: {{totalFriends}}</h2>
<button id="findAllFriends">Vaata oma sõpru</button>
<div id="users"></div>

<hr>

<h2>Profiilipilt</h2>
<div class="card profile-image">
    <div class="card-header">
        <div class="image-box">
            {{#each picId}}
                <img src="" id="pfp" data-src="{{this}}" height="200" width="200" alt="profile picture">
            {{/each}}
        </div>
    </div>

    <div class="card-content">
        <form method="post" enctype="multipart/form-data" action="/profiil/upload">
            <label class="peida" for="choose">Vali pilt</label>
            <input id="choose" class="choose-file" id="avatar" type="file" name="avatar">
            <br>
            <button type="submit">Lisa profiilipilt</button>
        </form>

        <form method="post" action="/profiil/remove">
            <button type="submit">Eemalda profiilipilt</button>
        </form>
    </div>
</div>
